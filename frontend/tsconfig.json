{
  "include": ["./src"],
  "compilerOptions": {
    "lib": ["dom", "es2021"],
    "module": "esnext",
    "target": "es2016",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*"]
    }
  }
}
